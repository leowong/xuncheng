<div class="box">
  <div class="cell">
    <table cellpadding="0" cellspacing="0" border="0" width="100%" class="user">
      <tr>
	<td class="avatar" width="73" valign="top" align="center">
	  <%= image_tag @user.avatar_path(:original), :alt => @user.username %>
	</td>
	<td class="details" width="auto" align="left" valign="top">
	  <div class="username">
	    <h2><%= @user.username %></h2>
	  </div>
	  <div class="signature">
	    <%= @user.email %>
	  </div>
	  <div class="meta">
	    Member #<%= @user.id %>.
	    Joined at <%= @user.created_at.to_datetime.strftime('%Y-%m-%d %H:%M:%S') %>.
	  </div>
	</td>
      </tr>
    </table>
  </div>
</div>

<hr class="space" />
<div class="box">
  <div class="cell">
    Recent Posted Topics
  </div>
  <div class="cell">
    <div class="user_topics">
      <%= render 'shared/item_listing', :items => @user.topics, :writer => "replier" %>
    </div>
  </div>
</div>

<hr class="space" />
<div class="box">
  <div class="cell">
    Recent Replied Topics
  </div>
  <div class="cell">
    <div class="user_replies">
      <%= render 'shared/item_listing', :items => Topic.replied_by(@user) %>
    </div>
  </div>
</div>
