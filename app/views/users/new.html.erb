<%= content_for :title do %>
  <%= t('authenticity.signup') %>
<% end %>

<div class="box">
  <div class="cell">
    <div class="breadcrumbs">
      <%= link_to t('site.home'), root_url %>
      <span class="separator">&nbsp;â€º&nbsp;</span>
      <%= t('authenticity.signup') %>
    </div>
  </div>

  <div class="cell">
    <div class="form">
      <%= form_for setup_user(@user), :html => { :multipart => true } do |f| %>
        <%= render 'shared/error_messages', :object => f.object %>

	<table cellpadding="5" cellspacing="0" border="0">
	  <tr>
	    <td class="name">
	      <%= f.label :username %>
	    </td>
	    <td class="value">
	      <%= f.text_field :username, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	      <%= f.label :email %>
	    </td>
	    <td class="value">
	      <%= f.text_field :email, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	      <%= f.label :password %>
	    </td>
	    <td class="value">
	      <%= f.password_field :password, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	      <%= f.label :password_confirmation %>
	    </td>
	    <td class="value">
	      <%= f.password_field :password_confirmation, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td>
	    </td>
	    <td>
	      <%= f.submit t('authenticity.signup'), :class => "super normal button" %>
	    </td>
	  </tr>
	</table>
      <% end %>
    </div>
  </div>

  <div class="cell">
    <%= link_to t('.forgot_password'), new_password_path(:user) %>
  </div>
</div>
