<%= form_for setup_user(@user), :html => { :multipart => true } do |f| %>
  <%# TODO gracefully displaying error messages %>

  <table cellpadding="5" cellspacing="0" border="0">
    <tr>
      <td class="name">
	<%= t('.current') %>
      </td>
      <td class="value">
	<%= image_tag @user.avatar_path(:original) %> &nbsp;
	<%= image_tag @user.avatar_path(:normal) %> &nbsp;
	<%= image_tag @user.avatar_path(:mini) %>
      </td>
    </tr>
    <%= f.fields_for :avatar do |builder| %>
      <tr>
	<td class="name">
	  <%= builder.label :attachment, t('.new') %>
	</td>
	<td class="value">
	  <%= builder.file_field :attachment %>
	</td>
      </tr>
    <% end %>
    <tr>
      <td>
      </td>
      <td>
	<%= f.submit t('.upload_avatar'), :class => "super normal button" %>
      </td>
    </tr>
  </table>
<% end %>
