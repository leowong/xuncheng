<%= div_for reply, :class => "cell" do %>
  <table cellpadding="0" cellspacing="0" border="0" width="100%">
    <tr>
      <td valign="top" class="avatar">
	<%= image_tag("http://www.v2ex.com/avatar/788/normal") %>
      </td>
      <td class="details valign="top">
	<div class="meta">
	  #<%= reply_counter + 1 %> - <%= time_ago_in_words(reply.created_at) %> ago<br />
	</div>
	<div class="author">
	  <strong><%= link_to "#{reply.user.username}", "javascript:void(0)" %></strong>
	</div>
	<hr class="space" style="margin-bottom:5px" />
	<div class="content">
	  <%= simple_format reply.content %>
	</div>
      </td>
    </tr>
  </table>
<% end %>
