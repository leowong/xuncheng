<%= content_for :title do %>
  <%= t('.new_topic') %>
<% end %>

<div class="box">
  <div class="cell">
    <div class="upload_image">
      <%= link_to t('.upload_image'), new_image_path, :id => "upload_image_link" %>
    </div>
    <div class="breadcrumbs">
      <%= link_to t('site.home'), root_url %>
      <span class="separator">&nbsp;›&nbsp;</span>
      <%= link_to @node.name, @node %>
      <span class="separator">&nbsp;›&nbsp;</span>
      <%= t('.new_topic') %>
    </div>
  </div>
  <div class="cell new_topic">
    <%= render 'form' %>
  </div>
  <div class="cell cancel_button">
    <span class="fade"><span class="separator">‹&nbsp;</span><%= t('.back_to') %> <%= link_to @node.name, @node %></span> 
  </div>
</div>
