  <div class="cell">
    <div style="float:right">
      <a id="upload_images_link" href="<%= new_image_path %>">Upload images</a>
    </div>
    <div class="breadcrumbs">
      <%= link_to "Home", root_url %>
      <span class="separator">&nbsp;›&nbsp;</span>
      <%= link_to @node.name, @node %>
      <span class="separator">&nbsp;›&nbsp;</span>
      New topic
    </div>
  </div>
  <div class="cell new_topic">
    <%= render 'form' %>
  </div>
  <div class="cell cancel_button">
    <span class="fade"><span class="separator">‹&nbsp;</span>Back to <%= link_to @node.name, @node %></span> 
  </div>
</div>
