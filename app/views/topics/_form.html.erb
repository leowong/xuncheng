<%= form_for [@node, @topic] do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.text_field :title, :class => 'title' %>
  </div>
  <div class="field">
    <%= f.text_area :content, :class => 'content' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'super normal button' %>
  </div>
<% end %>
