<% if current_user %>
  <div class="box">
    <div class="cell">
      <table cellpadding="0" cellspacing="0" border="0" width="100%">
	<tr>
	  <td class="avatar">
	    <%= link_to_unless_current image_tag(current_user.avatar_path, :alt => current_user.username), current_user %>
	  </td>
	  <td class="username">
	    <%= link_to_unless_current current_user.username, current_user %>
	  </td>
	</tr>
      </table>
    </div>
  </div>
<% else %>
  <div class="box">
    <div class="cell">
      <div class="summary">
	<strong><%= t('site.name') %></strong>:<br />
	<%= t('site.description') %><%= t('punctuation.period') %>
      </div>
    </div>
    <div class="cell center">
      <div class="login_button">
	<%= link_to t('authenticity.join_now'), signup_path, :class => "super normal button" %>
      </div>
      <div class="returned_user">
	<%= t('.returned_user') %> <%= link_to t('authenticity.signin').downcase, login_path %><%= t('punctuation.period') %>
      </div>
    </div>
  </div>
<% end %>

<hr class="space" />
<div class="box">
  <div class="cell">
    <div class="summary">
      <%= t('.nodes') %>
    </div>
  </div>
  <div class="cell nodes">
    <% Node.all.each do |node| %>
      <%= link_to node.name, node, :class => 'node' %>
    <% end %>
  </div>
</div>
