<div class="box">
  <div class="cell">
    <div class="breadcrumbs">
      <%= link_to t('site.home'), root_url %>
      <span class="separator">&nbsp;â€º&nbsp;</span>
      <%= t('authenticity.signin') %>
    </div>
  </div>

  <div class="cell">
    <div class="form">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <table cellpadding="5" cellspacing="0" border="0">
	  <tr>
	    <td class="name">
	      <%= f.label :login %>
	    </td>
	    <td class="value">
	      <%= f.text_field :login, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	      <%= f.label :password %>
	    </td>
	    <td class="value">
	      <%= f.password_field :password, :class => "sl" %>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	    </td>
	    <td class="value">
	      <% if devise_mapping.rememberable? -%>
	        <%= f.check_box :remember_me %> <%= f.label :remember_me, t('.remember_me') %>
	      <% end -%>
	    </td>
	  </tr>
	  <tr>
	    <td class="name">
	    </td>
	    <td class="value">
	      <%= f.submit t('authenticity.signin') %>
	    </td>
	  </tr>
	</table>
      <% end %>
    </div>
  </div>

  <div class="cell">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
